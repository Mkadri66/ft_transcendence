{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@config": ["src/config.ts"],
            "@scripts/*": ["./src/scripts/*"]
        },
         "types": ["vite/client"],
    },
    "include": ["src/**/*", "config.ts"]
}
